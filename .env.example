# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_URL_LOCAL=postgresql://user:password@localhost:5432/dbname

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://:password@host:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_CACHE_TTL=300

# JWT Configuration
SECRET_KEY=your-secret-key-min-32-characters-long-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
APP_NAME=POL Properties
APP_VERSION=1.0.0
DEBUG=False

# CORS Settings
CORS_ORIGINS=

# Admin User (Auto-created on startup if doesn't exist)
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=
ADMIN_PHONE=

# Cloudinary Configuration (for media uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_UPLOAD_FOLDER=pol-properties

# Email Configuration (Resend)
RESEND_API_KEY=re_your_api_key_here
SALES_EMAIL=sales@yourdomain.com
FROM_EMAIL=noreply@yourdomain.com
FRONTEND_URL=https://yourfrontend.com
